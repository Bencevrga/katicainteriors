---
import "@/styles/global.css";

// 9 db poszt – képeket tedd a /public/uploads/instagram/ alá
// A href az eredeti Instagram poszt URL-je (pl. https://www.instagram.com/p/XXXX/)
const posts = [
  { href: "https://www.instagram.com/p/XXXXXXXXX1/", img: `${import.meta.env.BASE_URL}uploads/instagram/1.jpg`, alt: "Instagram #1" },
  { href: "https://www.instagram.com/p/XXXXXXXXX2/", img: `${import.meta.env.BASE_URL}uploads/instagram/2.jpg`, alt: "Instagram #2" },
  { href: "https://www.instagram.com/p/XXXXXXXXX3/", img: `${import.meta.env.BASE_URL}uploads/instagram/3.jpg`, alt: "Instagram #3" },
  { href: "https://www.instagram.com/p/XXXXXXXXX4/", img: `${import.meta.env.BASE_URL}uploads/instagram/4.jpg`, alt: "Instagram #4" },
  { href: "https://www.instagram.com/p/XXXXXXXXX5/", img: `${import.meta.env.BASE_URL}uploads/instagram/5.jpg`, alt: "Instagram #5" },
  { href: "https://www.instagram.com/p/XXXXXXXXX6/", img: `${import.meta.env.BASE_URL}uploads/instagram/6.jpg`, alt: "Instagram #6" },
  { href: "https://www.instagram.com/p/XXXXXXXXX7/", img: `${import.meta.env.BASE_URL}uploads/instagram/7.jpg`, alt: "Instagram #7" },
  { href: "https://www.instagram.com/p/XXXXXXXXX8/", img: `${import.meta.env.BASE_URL}uploads/instagram/8.jpg`, alt: "Instagram #8" },
  { href: "https://www.instagram.com/p/XXXXXXXXX9/", img: `${import.meta.env.BASE_URL}uploads/instagram/9.jpg`, alt: "Instagram #9" },
];
---

<section id="instagram" class="instagram container">
  <div class="section-sep" aria-hidden="true"></div>
  <h2 class="section-title">Instagram</h2>

  <div class="ig-grid">
    {posts.map((p) => (
      <a class="ig-post" href={p.href} target="_blank" rel="noopener" aria-label="Megnyitás Instagramon">
        <img src={p.img} alt={p.alt} loading="lazy" />
        <span class="ig-overlay">
          <!-- mini Instagram-ikon (SVG) -->
          <svg viewBox="0 0 24 24" class="ig-icon" aria-hidden="true">
            <path d="M7 2h10a5 5 0 0 1 5 5v10a5 5 0 0 1-5 5H7a5 5 0 0 1-5-5V7a5 5 0 0 1 5-5zm5 5.5a5.5 5.5 0 1 0 0 11a5.5 5.5 0 0 0 0-11zm0 2a3.5 3.5 0 1 1 0 7a3.5 3.5 0 0 1 0-7zM18 6.5a1.5 1.5 0 1 0 0 3a1.5 1.5 0 0 0 0-3z"/>
          </svg>
        </span>
      </a>
    ))}
  </div>
</section>
