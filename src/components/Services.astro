---
import "@/styles/global.css";
const services = [
  { slug: "tanacsadas", title: "Tanácsadás", excerpt: "Segítek átlátni a stílusokat..." },
  { slug: "tervezes-latvanyterv-nelkul", title: "Tervezés látványterv nélkül", excerpt: "Funkcionális és esztétikus..." },
  { slug: "butor-tervezes", title: "Bútortervezés", excerpt: "Egyedi bútorok a tér arányaihoz..." },
  { slug: "home-staging", title: "Home Staging", excerpt: "Eladás/kiadás előtt profi berendezéssel..." },
];
const linkFor = (slug: string) => `/szolgaltatasok/${slug}`;
const servicesImg = `${import.meta.env.BASE_URL}uploads/services.jpg`;
---
<section id="services" class="services container">
  <div class="section-sep" aria-hidden="true"></div>
  <div class="services-layout">
    <h2 class="services-title">Szolgáltatások</h2>

    <div class="services-list">
      {services.map((s) => (
        <details class="service">
          <summary class="service-head">
            <h3>{s.title}</h3>
            <span class="chev" aria-hidden="true"></span>
          </summary>
          <div class="service-body">
            <p>{s.excerpt}</p>
            <a class="btn more" href={linkFor(s.slug)}>Tudj meg többet</a>
          </div>
        </details>
      ))}
    </div>

    <aside class="services-aside">
      <figure class="services-figure">
        <img src={servicesImg} alt="Szolgáltatások – enteriőr" loading="lazy" />
      </figure>
    </aside>
  </div>
</section>

<script type="module">
  import initServices from "@/scripts/services.js";
  initServices();
</script>
