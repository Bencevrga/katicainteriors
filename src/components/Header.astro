---
import "@/styles/global.css";
import blogJsUrl from "@/scripts/blog.js?url";
import headerJsUrl from "@/scripts/header.js?url";
---
<header class="header">
  <div class="header-inner">
    <a class="brand" href="/" aria-label="Katica interior designer">
      <img src={`${import.meta.env.BASE_URL}uploads/logo.png`} alt="UK" class="logo" />
      <span class="brand-title">Katica <span>interior designer</span></span>
    </a>

    <button id="menuBtn" class="icon-btn" aria-label="Menü">
      <span class="burger"></span>
    </button>
  </div>

  <aside id="sideNav" class="side-nav" aria-hidden="true">
    <div class="side-nav-inner">
      <nav class="nav-links" aria-label="Oldal navigáció">
        <a href="#services">Szolgáltatások</a>
        <a href="#references">Referenciák</a>
        <a href="#testimonials">Vélemények</a>
        <a href="#faq">GYIK</a>
        <a href="#about-contact">Kapcsolat</a>
        <a href="/blog">Blog</a>
      </nav>
      <div class="meta">
        <div>HU / EN</div>
        <div>
          <div>+36 00 000 0000</div>
          <div>email@example.hu</div>
        </div>
      </div>
    </div>
  </aside>

  <div id="overlay" class="overlay"></div>
</header>

<!-- Inline modul import (alias-szal) -->
<script type="module" src={blogJsUrl}></script>
<script type="module" src={headerJsUrl}></script>