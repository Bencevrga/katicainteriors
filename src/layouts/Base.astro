---
import "@/styles/global.css";
import Header from "@/components/Header.astro";
const { title = "Udvary Katica interiors", description = "Lakberendezés és home staging" } = Astro.props;
---
<!DOCTYPE html>
<html lang="hu">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <base href={import.meta.env.BASE_URL} />
  </head>
  <body id="top">
    <Header />
    <main>
      <slot />
    </main>

    <!-- Globális smooth scroll inline importtal -->
    <script type="module">
      import initSmoothScroll from "@/scripts/smoothScroll.js";
      initSmoothScroll();
    </script>
  </body>
</html>
